{
  "name": "heatsync",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "prettier": "^3.7.4",
    "prettier-plugin-svelte": "^3.4.0",
    "prettier-plugin-tailwindcss": "^0.7.2"
  },
  "scripts": {
    "backend:dev": "bun run --cwd packages/backend dev",
    "backend:start": "bun run --cwd packages/backend start",
    "webapp:dev": "bun run --cwd packages/webapp dev",
    "webapp:build": "bun run --cwd packages/webapp build",
    "webapp:preview": "bun run --cwd packages/webapp preview",
    "webapp:check": "bun run --cwd packages/webapp check",
    "webapp:lint": "bun run --cwd packages/webapp lint",
    "dev": "bun run backend:dev & bun run webapp:dev",
    "build": "bun run webapp:build && bun run build:copy-static",
    "build:copy-static": "rm -rf packages/backend/public && cp -r packages/webapp/build packages/backend/public",
    "start": "bun run --cwd packages/backend start",
    "clean": "rm -rf packages/webapp/build packages/backend/public",
    "docker:build": "docker build -t heatsync .",
    "docker:run": "docker run --rm -p 8000:8000 --env-file .env heatsync",
    "format": "prettier packages/ --write",
    "worker:dev": "bun run --cwd packages/cloudflare-worker dev",
    "worker:deploy": "bun run --cwd packages/cloudflare-worker deploy"
  }
}
