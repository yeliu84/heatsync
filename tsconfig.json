{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@heatsync/backend/*": ["packages/backend/src/*"],
      "@heatsync/shared/*": ["packages/shared/src/*"],
      "@heatsync/webapp/*": ["packages/webapp/src/*"]
    }
  }
}
